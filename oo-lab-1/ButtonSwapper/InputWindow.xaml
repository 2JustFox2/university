<Window x:Class="ButtonSwapper.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод числа" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Введите число:" FontSize="14" Margin="0,0,0,15" FontWeight="Bold"/>
            
            <TextBox Name="NumberInput" 
                     TextAlignment="Center" 
                     FontSize="14" 
                     Padding="10"
                     Margin="0,0,0,20"
                     Height="40"/>
            
            <TextBlock Name="ResultText" 
                       Text="" 
                       FontSize="14" 
                       TextAlignment="Center" 
                       Foreground="#228B22"
                       Margin="0,0,0,20"
                       FontWeight="Bold"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="SubmitButton" 
                        Click="OnSubmit" 
                        Padding="20,10" 
                        FontSize="12" 
                        Width="140"
                        Margin="0,0,10,0"
                        Background="#4CAF50"
                        Foreground="White">
                    Умножить на 2
                </Button>
                <Button Name="CancelButton" 
                        Click="OnCancel" 
                        Padding="20,10" 
                        FontSize="12" 
                        Width="140"
                        Background="#f44336"
                        Foreground="White">
                    Закрыть
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
